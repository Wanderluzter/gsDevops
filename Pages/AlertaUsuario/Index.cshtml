@page
@model IndexModel
@{
    ViewData["Title"] = "Alertas de Usu√°rio";
}

<h1 class="text-center my-4">üì¢ Alertas de Usu√°rio</h1>

<div class="container">

    <!-- Formul√°rio de cria√ß√£o -->
    <form method="post" class="mb-4 border p-4 rounded shadow-sm bg-light">
        <h4>Novo Alerta</h4>

        <div class="mb-2">
            <label asp-for="NovoAlerta.DataAlerta" class="form-label">Data do Alerta</label>
            <input asp-for="NovoAlerta.DataAlerta" type="datetime-local" class="form-control" />
        </div>

        <div class="mb-2">
            <label asp-for="NovoAlerta.Gravidade" class="form-label">Gravidade</label>
            <input asp-for="NovoAlerta.Gravidade" class="form-control" />
        </div>

        <div class="mb-2">
            <label asp-for="NovoAlerta.IdLocalizacao" class="form-label">ID Localiza√ß√£o</label>
            <input asp-for="NovoAlerta.IdLocalizacao" class="form-control" />
        </div>

        <div class="mb-2">
            <label asp-for="NovoAlerta.IdUsuario" class="form-label">ID Usu√°rio</label>
            <input asp-for="NovoAlerta.IdUsuario" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NovoAlerta.IdEvento" class="form-label">ID Evento</label>
            <input asp-for="NovoAlerta.IdEvento" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Salvar Alerta</button>
    </form>

    <!-- Lista de alertas -->
    <h4>Lista de Alertas</h4>
    @if (Model.Alertas.Count == 0)
    {
        <p class="text-muted">Nenhum alerta cadastrado ainda.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var alerta in Model.Alertas)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@alerta.DataAlerta?.ToString("dd/MM/yyyy HH:mm")</strong><br />
                        Gravidade: @alerta.Gravidade<br />
                        Localiza√ß√£o: @alerta.IdLocalizacao | Usu√°rio: @alerta.IdUsuario | Evento: @alerta.IdEvento
                    </div>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="idAlerta" value="@alerta.IdAlerta" />
                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Apagar</button>
                    </form>
                </li>
            }
        </ul>
    }
</div>
